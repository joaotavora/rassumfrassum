{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"target": "ES6",
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ES6", "ESNext"],
		"outDir": "lib",
		"checkJs": true,
		"allowJs": true,
		"declarationDir": "@types",
		"resolveJsonModule": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**"]
}
